// ========================================
// NAVEGA√á√ÉO ENTRE TELAS
// ========================================

function showScreen(screenId) {
    // Remove active de todas as telas
    document.querySelectorAll('.screen').forEach(screen => {
        screen.classList.remove('active');
    });
    
    // Adiciona active na tela desejada
    setTimeout(() => {
        document.getElementById(screenId).classList.add('active');
    }, 100);
}

// ========================================
// 1Ô∏è‚É£ TELA INICIAL - RENDERIZAR EQUIPES
// ========================================

function renderTeams() {
    const container = document.getElementById('teamsScroll');
    
    if (!container) {
        console.error('‚ùå Container teamsScroll n√£o encontrado!');
        return;
    }
    
    console.log(`üèÅ Renderizando ${teams2025.length} equipes...`);
    container.innerHTML = '';
    
    teams2025.forEach((team, index) => {
        const card = document.createElement('div');
        card.className = 'team-card';
        card.style.setProperty('--team-color', team.color);
        card.style.cursor = 'pointer';
        
        card.innerHTML = `
            <div class="team-logo-container">
                <img 
                    src="${team.logo}" 
                    alt="${team.name}" 
                    class="team-logo"
                    crossorigin="anonymous"
                />
            </div>
            <div>
                <div class="team-name">${team.shortName}</div>
                <div class="team-info">${team.pilots.length} pilotos</div>
            </div>
        `;
        
        // Adicionar evento de clique
        card.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            console.log(`üëÜ CLIQUE DETECTADO: ${team.name}`);
            console.log('Equipe completa:', team);
            selectTeam(team);
        });
        
        container.appendChild(card);
        console.log(`‚úÖ Card ${index + 1}/${teams2025.length}: ${team.name}`);
    });
    
    console.log(`‚úÖ ${teams2025.length} equipes renderizadas!`);
}

